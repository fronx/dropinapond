{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://dropinapond.dev/schemas/metadata.schema.json",
  "title": "Ego Graph Metadata",
  "description": "Version and graph-level metadata for a modular ego graph",
  "type": "object",
  "required": ["version", "format", "created_at"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version (e.g., '0.2')",
      "pattern": "^\\d+\\.\\d+$"
    },
    "format": {
      "type": "string",
      "description": "Storage format type",
      "enum": ["modular", "monolithic"]
    },
    "created_at": {
      "type": "string",
      "description": "Creation date in YYYY-MM-DD format",
      "format": "date"
    },
    "description": {
      "type": "string",
      "description": "Optional description of this ego graph"
    }
  }
}
