{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://dropinapond.dev/schemas/phrase.schema.json",
  "title": "Semantic Phrase",
  "description": "A weighted phrase in someone's semantic field",
  "type": "object",
  "required": ["text", "last_updated"],
  "properties": {
    "text": {
      "type": "string",
      "description": "The phrase text (embedding computed separately in ChromaDB)",
      "minLength": 1
    },
    "weight": {
      "type": "number",
      "description": "Importance weight (0-1, defaults to 1.0)",
      "minimum": 0,
      "maximum": 1,
      "default": 1.0
    },
    "last_updated": {
      "type": "string",
      "description": "Last update date in YYYY-MM-DD format",
      "format": "date"
    }
  }
}
